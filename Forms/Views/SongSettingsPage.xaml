<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Jammit.Forms.Views.SongSettingsPage"
    Disappearing="SongSettingsPage_Disappearing"
  >
  <ContentPage.Content>

    <StackLayout BackgroundColor="Gray">
      <StackLayout x:Name="HeaderLayout" Orientation="Horizontal">
        <Button x:Name="BackButton"
              Text="[TRANSLATE] Back"
              TextColor="White"
              FontAttributes="Bold"
              BackgroundColor="DimGray"
              Clicked="BackButton_Clicked" />
      </StackLayout>
      <Grid HorizontalOptions="Center" WidthRequest="724">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Row 0-->
        <Label Grid.Row="0" Grid.Column="0"
               Text="[TRANSLATE] Count-in Clicks"
               BackgroundColor="LightGray"
               />
        <Entry Grid.Row="0" Grid.Column="1"
               x:Name="CountinEntry"
               Text="0"
               />
      </Grid>
    </StackLayout>

  </ContentPage.Content>
</ContentPage>
