    <ResourceDictionary>

      <!--Colors-->
      <!--See https://www.99colors.net/dot-net-colors-->
      <Color x:Key="DarkButtonBackgroundColor">DimGray</Color>
      <Color x:Key="LightButtonBackgroundColor">DarkGray</Color>

      <!--Styles-->
      <Style x:Key="CheckedStyle" TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="DimGray" />
        <Setter Property="BorderColor" Value="Cyan" />
      </Style>

      <Style x:Key="UncheckedStyle" TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="DarkGray" />
      </Style>

